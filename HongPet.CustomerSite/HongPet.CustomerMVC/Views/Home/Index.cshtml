@model ProductListViewModel

@{
    ViewData["Title"] = "Trang Chủ";
}

<partial name="_Hero" />

<partial name="_ShopByPet" />

<!-- Featured Products Section -->
<section class="featured-products py-5">
    <div class="container">
        <div class="section-header mb-5">
            <h2 class="section-title text-center">Sản Phẩm Mới</h2>
        </div>

        <div class="row">
            @foreach (var product in Model.ProductPagedList.Items)
            {
                <div class="col-md-4 mb-4">
                    <div class="featured-product-card">
                        <div class="product-image">
                            <img src="@product.ThumbnailUrl" alt="@product.Name" class="img-fluid">
                        </div>
                        <div class="product-info">
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="product-title">@product.Name</h3>
                                <a class="wishlist-btn-simple"
                                   asp-controller="Product" asp-action="Detail"
                                   asp-route-id="@product.Id">
                                    <i class="bi bi-cart3"></i>
                                </a>
                            </div>
                            <div class="product-price">@product.Price.ToString("C")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
