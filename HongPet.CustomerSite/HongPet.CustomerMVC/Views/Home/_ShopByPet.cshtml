<!-- Shop by Pet Section -->
<section class="shop-by-pet-section py-5">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title mb-0">Cho thú cưng</h2>
        </div>
        <div class="pet-categories-slider">
            <div class="row">
                <!-- Dog Category -->
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <a asp-controller="Product" asp-action="Index"
                       asp-route-categories="chó"
                       class="pet-category-item">
                        <div class="pet-icon-container">
                            <div class="pet-icon dog-icon"></div>
                        </div>
                        <h3 class="pet-category-name">Chó</h3>
                    </a>
                </div>

                <!-- Cat Category -->
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <a asp-controller="Product" asp-action="Index"
                       asp-route-categories="mèo"
                       class="pet-category-item">
                        <div class="pet-icon-container cat-bg">
                            <div class="pet-icon cat-icon"></div>
                        </div>
                        <h3 class="pet-category-name">Mèo</h3>
                    </a>
                </div>

                <!-- Hamster Category -->
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <a asp-controller="Product" asp-action="Index"
                       asp-route-categories="hamster"
                       class="pet-category-item">
                        <div class="pet-icon-container">
                            <div class="pet-icon hamster-icon"></div>
                        </div>
                        <h3 class="pet-category-name">Hamster</h3>
                    </a>
                </div>

                <!-- Rabbit Category -->
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <a asp-controller="Product" asp-action="Index"
                       asp-route-categories="thỏ"
                       class="pet-category-item">
                        <div class="pet-icon-container">
                            <div class="pet-icon rabbit-icon"></div>
                        </div>
                        <h3 class="pet-category-name">Thỏ</h3>
                    </a>
                </div>

                <!-- Parrot Category -->
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <a asp-controller="Product" asp-action="Index"
                       asp-route-categories="vẹt"
                       class="pet-category-item">
                        <div class="pet-icon-container">
                            <div class="pet-icon parrot-icon"></div>
                        </div>
                        <h3 class="pet-category-name">Vẹt</h3>
                    </a>
                </div>

                <!-- Turtle Category -->
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <a asp-controller="Product" asp-action="Index"
                       asp-route-categories="rùa"
                       class="pet-category-item">
                        <div class="pet-icon-container">
                            <div class="pet-icon turtle-icon"></div>
                        </div>
                        <h3 class="pet-category-name">Rùa</h3>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>