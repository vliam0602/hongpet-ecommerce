
<!-- Page Header -->
<section class="page-header py-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="page-title">Shopping Cart</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Cart Section -->
<section class="cart-section py-5">
    <div class="container">
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8 mb-4 mb-lg-0">
                <div class="cart-container">
                    <div class="cart-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h3 class="cart-title">Product</h3>
                            </div>
                            <div class="col-md-2 text-center">
                                <h3 class="cart-title">Price</h3>
                            </div>
                            <div class="col-md-2 text-center">
                                <h3 class="cart-title">Quantity</h3>
                            </div>
                            <div class="col-md-2 text-end">
                                <h3 class="cart-title">Subtotal</h3>
                            </div>
                        </div>
                    </div>

                    <div class="cart-items">
                        <!-- Cart Item 1 -->
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="item-info">
                                        <div class="item-image">
                                            <img src="https://i.ebayimg.com/thumbs/images/g/VQgAAOSwvuZiF~ai/s-l225.jpg" alt="Premium Dog Food">
                                        </div>
                                        <div class="item-details">
                                            <h4 class="item-title">Premium Dog Food</h4>
                                            <div class="item-variant">Size: 5kg</div>
                                            <button class="remove-item">
                                                <i class="bi bi-trash"></i> Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <div class="item-price">$29.99</div>
                                </div>
                                <div class="col-md-2">
                                    <div class="quantity-selector">
                                        <button class="quantity-btn minus">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" class="quantity-input" value="1" min="1" max="99">
                                        <button class="quantity-btn plus">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <div class="item-subtotal">$29.99</div>
                                </div>
                            </div>
                        </div>

                        <!-- Cart Item 2 -->
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="item-info">
                                        <div class="item-image">
                                            <img src="https://i.ebayimg.com/thumbs/images/g/VQgAAOSwvuZiF~ai/s-l225.jpg" alt="Dog Bowl">
                                        </div>
                                        <div class="item-details">
                                            <h4 class="item-title">Dog Bowl</h4>
                                            <div class="item-variant">Color: Blue</div>
                                            <button class="remove-item">
                                                <i class="bi bi-trash"></i> Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <div class="item-price">$19.99</div>
                                </div>
                                <div class="col-md-2">
                                    <div class="quantity-selector">
                                        <button class="quantity-btn minus">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" class="quantity-input" value="2" min="1" max="99">
                                        <button class="quantity-btn plus">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <div class="item-subtotal">$39.98</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Cart Actions -->
                    <div class="cart-actions">
                        <div class="row">
                            <div class="col-md-4 text-md-start">
                                <a href="product-list.html" class="btn btn-continue-shopping">
                                    <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                                </a>
                            </div>
                            <div class="col-md-8 coupon-container text-md-end">
                                <input type="text" class="form-control" placeholder="Coupon code">
                                <button class="btn btn-apply-coupon">Xác nhận</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cart Summary -->
            <div class="col-lg-4">
                <div class="cart-summary">
                    <h3 class="summary-title">Cart Summary</h3>

                    <div class="summary-item">
                        <span class="summary-label">Subtotal</span>
                        <span class="summary-value">$69.97</span>
                    </div>

                    <div class="summary-item">
                        <span class="summary-label">Shipping</span>
                        <span class="summary-value">$5.00</span>
                    </div>

                    <div class="summary-item">
                        <span class="summary-label">Tax</span>
                        <span class="summary-value">$7.50</span>
                    </div>

                    <div class="summary-item discount">
                        <span class="summary-label">Discount</span>
                        <span class="summary-value">-$5.00</span>
                    </div>

                    <div class="summary-total">
                        <span class="total-label">Total</span>
                        <span class="total-value">$77.47</span>
                    </div>

                    <a href="./payment.html" class="btn btn-checkout">
                        Thanh toán <i class="bi bi-arrow-right"></i>
                    </a>

                    <div class="secure-checkout">
                        <i class="bi bi-shield-lock"></i> Secure Checkout
                    </div>

                    <div class="payment-methods">
                        <span class="payment-icon"><i class="bi bi-credit-card"></i></span>
                        <span class="payment-icon"><i class="bi bi-paypal"></i></span>
                        <span class="payment-icon"><i class="bi bi-wallet2"></i></span>
                        <span class="payment-icon"><i class="bi bi-bank"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>