@inject HongPet.CustomerMVC.Services.Abstraction.IClaimService claimService

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand" asp-controller="Home">
            <img class="logo-img" src="~/assets/logo.png" alt="logo">
            <span class="fw-bold logo-title">Hồng Pét</span>
        </a>

        <!-- Hamburger Menu for Mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sản phẩm</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Giới thiệu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Liên hệ</a>
                </li>
            </ul>
        </div>

        <!-- Search and Icons -->
        <div class="d-none d-lg-flex align-items-center">
            <div class="search-container me-3">
                <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                <button class="search-button">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <a class="icon-container me-3" href="./cart.html">
                <i class="bi bi-cart3"></i>
                <span class="badge">0</span>
            </a>

            @* Kiểm tra nếu email tồn tại trong Session *@
            @if (claimService.IsAuthorized)
            {
                <!-- Hiển thị email người dùng -->
                <div class="dropdown user-dropdown">
                    <a class="dropdown-toggle user-welcome" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Xin chào, @claimService.Email
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Tài khoản của tôi</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-bag me-2"></i>Đơn hàng của tôi</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a asp-controller="Auth" asp-action="Logout"
                               class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                    </ul>
                </div>
            } else
            {
                <!-- Hiển thị nút Đăng nhập nếu chưa đăng nhập -->
                <a asp-controller="Auth" asp-action="Login" class="login-btn">Đăng nhập</a>
            }
        </div>
    </div>
</nav>